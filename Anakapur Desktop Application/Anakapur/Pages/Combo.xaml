        <Button x:Name="btnFamilyPack" Content="Family Pack" HorizontalAlignment="Left" Margin="304,59,0,0" VerticalAlignment="Top" Width="75" Height="20"/>
        <StackPanel Name="spdata" Width="Auto" />
