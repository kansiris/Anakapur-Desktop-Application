<Window x:Class="Anakapur.TotalReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Anakapur"
        mc:Ignorable="d"
        Title="TotalReport" Height="500" Width="500" ResizeMode="NoResize">
    <Grid VerticalAlignment="Top" HorizontalAlignment="Center">

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <Label Name="lblTotal" Content="Revenue by Restuarant : " FontSize="18" FontWeight="Bold"/>
            <ScrollViewer >
                <DataGrid Width="auto"  Height="400" x:Name="dataGrid" IsReadOnly="True" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            </ScrollViewer>
        </StackPanel>

    </Grid>
</Window>
